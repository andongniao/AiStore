<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="fclass_gridview_classname">
        
        
        <!-- 两列之间的边距为10dip,水平方向 -->
        <item name="android:horizontalSpacing">1dip</item>        
         
		<!-- 两行之间的边距,为10dip，垂直方向 -->
        <item name="android:verticalSpacing">1dip</item>
        
        <!-- 去除选中时的黄色底色,换成透明色 -->
        <item name="android:listSelector">#00000000</item>
        
        <!-- GridView的列数设置为4列 -->
        <item name="android:numColumns">4</item>
        
        <!-- 内边距:网格和父边框的距离 -->
        <item name="android:padding">1dip</item>
        
        <!-- 隐藏GridView的滚动条 -->
        <item name="android:scrollbars">none</item>
                
        <!-- 缩放与列宽大小同步 -->
        <item name="android:stretchMode">columnWidth</item>
        
                        

        
    </style>

</resources>